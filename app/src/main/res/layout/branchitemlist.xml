<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTenNganh"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="KTPM" />
    <TableRow
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="25dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Mã ngành: " />
        <TextView
            android:id="@+id/txtMaNganh"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="1" />
    </TableRow>
    <TableRow
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="25dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Điểm chuẩn: " />
        <TextView
            android:id="@+id/txtDiemChuan"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="10" />
    </TableRow>

    <TableRow
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="25dp" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Khoa: " />
        <TextView
            android:id="@+id/txtKhoa"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="CNTT" />
    </TableRow>
    <TableRow
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="25dp" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Thời gian đào tạo: " />
        <TextView
            android:id="@+id/txtTgDaoTao"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="5 năm" />
    </TableRow>
</LinearLayout>