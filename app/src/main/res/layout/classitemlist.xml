<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:text=""
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:id="@+id/txtTenLop"/>


    <TableRow
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:weightSum="3">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Mã lớp" />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/txtMaLop"
            android:layout_weight="2"/>

    </TableRow>


    <TableRow
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:weightSum="3">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="GV chủ nhiệm" />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/txtGV"
            android:layout_weight="2"/>

    </TableRow>


    <TableRow
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:weightSum="3">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Ngành" />

        <TextView android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/txtNganh"
            android:layout_weight="2"/>

    </TableRow>


    <TableRow
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:weightSum="3">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Khoa: "
            android:gravity="center_vertical"
            android:id="@+id/textView6"
            android:layout_weight="1"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/txtKhoa"
            android:layout_weight="2"/>

    </TableRow>


    <TableRow
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:weightSum="3">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Sĩ số" />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/txtSiSo"
            android:layout_weight="2"/>

    </TableRow>

</LinearLayout>